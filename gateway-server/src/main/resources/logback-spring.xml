<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <jmxConfigurator/>

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator"/>

    <!--<include resource="org/springframework/boot/logging/logback/base.xml"/>-->
    <property name="LOG_PATH" value="${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}}"/>

    <!-- 系统日志 -->
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.out</Target>
        <encoder charset="UTF-8">
            <pattern>%d %contextName [%t] %-5level %logger{36} - %msg %n
            </pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
    </appender>

    <appender name="sys_debug" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_PATH}/debug.log</file>
        <append>true</append>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] [%-5level] [%logger.%M:%L] |%msg%n
            </pattern>
            <charset>utf-8</charset>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>ACCEPT</OnMatch>
        </filter>
    </appender>


    <appender name="sys_info" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/info.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOG_PATH}/${LOG_FILE}-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 100MB -->
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50}:%line - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <appender name="async_info" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>4096</queueSize>
        <appender-ref ref="sys_info"/>
    </appender>

    <appender name="sys_warn" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_PATH}/warn.log</file>
        <append>true</append>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] [%-5level] [%logger.%M:%L] |%msg%n
            </pattern>
            <charset>utf-8</charset>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>ACCEPT</OnMatch>
        </filter>
    </appender>

    <appender name="sys_error" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_PATH}/error.log</file>
        <append>true</append>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] [%-5level] [%logger.%M:%L] |%msg%n
            </pattern>
            <charset>utf-8</charset>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>ACCEPT</OnMatch>
        </filter>
    </appender>

    <logger name="one.yate" level="DEBUG"/>

    <logger name="org.apache" level="ERROR"/>
    <logger name="org.apache.commons" level="ERROR"/>

    <logger name="com.zaxxer.hikari.pool" level="DEBUG"/>

    <logger name="catalia" level="ERROR"/>
    <logger name="com.netflix" level="INFO"/>

    <logger name="org.springframework" level="DEBUG"/>
    <logger name="org.springframework.security" level="DEBUG"/>
    <logger name="org.springframework.web.context" level="DEBUG"/>


    <logger name="org.mybatis.spring" level="INFO"/>
    <logger name="com.apache.ibatis" level="INFO"/>
    <logger name="com.apache.ibatis.jdbc.ScriptRunner" level="INFO"/>
    <logger name="com.apache.ibatis.jdbc.SimpleDataSource" level="INFO"/>


    <logger name="java.sql.ResultSet" level="ERROR"/>
    <logger name="java.sql.Connection" level="ERROR"/>
    <logger name="java.sql.PreparedStatement" level="ERROR"/>


    <root level="DEBUG">
        <appender-ref ref="stdout"/>
        <appender-ref ref="sys_debug"/>
        <appender-ref ref="async_info"/>
        <appender-ref ref="sys_warn"/>
        <appender-ref ref="sys_error"/>
    </root>
</configuration>